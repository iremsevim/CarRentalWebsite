<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                <form role="form" name="category" class="form-horizontal bucket-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Parenet ID</label>
                        <div class="col-sm-6">
                            <select id="category_parentid" name="category[parentid]"  type="text" class="form-control">
                            <option value="0">Main Category</option>
                                {% for cat in categories %}
                                    <option value="{{cat.id}}" {{ cat.id==category.parentid?'selected':'' }} >{{cat.title }} </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Title</label>
                        <div class="col-sm-6">
                            <input id="category_title" name="category[title]" type="text" value="{{ category.title }}" class="form-control">
                            <span class="help-block">Burası kategori adıdır</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Keywords</label>
                        <div class="col-sm-6">
                            <input id="category_keywords" name="category[keywords]" value="{{ category.keywords }}" type="text" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Description</label>
                        <div class="col-sm-6">
                            <input id="category_description" name="category[description]" value="{{  category.description}}" class="form-control" id="focusedInput" type="text" value="This is focused...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Status</label>
                        <div class="col-sm-6">
                            <select id="category_status" name="category[status]"  type="text" class="form-control">
                                <option >{{ category.status}} </option>
                                <option >True </option>
                                <option >False </option>
                            </select>
                        </div>
                    </div>
                   <center><button style="width:50%"  type="submit" class="btn btn-success">Apply</button></center>
                    <div class="form-group">

                    </div>
                </form>
            </div>
        </section>
    </div>
</div>