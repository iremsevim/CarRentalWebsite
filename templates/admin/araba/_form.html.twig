<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                <form role="form" name="category" class="form-horizontal bucket-form" method="post">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Category</label>
                        <div class="col-sm-6">
                            <select id="category_parentid" name="category[parentid]"  type="text" class="form-control">
                                <option value="0">Main Category</option>
                                {% for cat in categories %}
                                    {% if araba.id is not null %}
                                        <option value="{{cat.id}}" {{ cat.id==araba.category.id ?'selected':'' }} >{{cat.title }} </option>
                                    {% else %}
                                        <option value="{{cat.id}}">{{cat.title }} </option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Title</label>
                        <div class="col-sm-6">
                            <input id="araba_title" name="araba[title]" type="text" value="{{ araba.title }}" class="form-control">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Brand</label>
                        <div class="col-sm-6">
                            <input id="araba_Brand" name="araba[Brand]" value="{{ araba.brand }}" type="text" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Price</label>
                        <div class="col-sm-6">
                            <input id="araba_Price" name="araba[Price]" value="{{ araba.price }}" type="text" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Gear</label>
                        <div class="col-sm-6">
                            <input id="araba_Gear" name="araba[Gear]"  value="{{ araba.gear }}" type="text" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Model Year</label>
                        <div class="col-sm-6">
                            <input id="araba_Modealyear" name="araba[Modealyear]"  value="{{ araba.modealyear }}" type="text" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Fuel</label>
                        <div class="col-sm-6">
                            <input id="araba_Fue" name="araba[Fue]"  value="{{ araba.fue }}" type="text" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Keywords</label>
                        <div class="col-sm-6">
                            <input id="araba_Keywords" name="araba[Keywords]" value="{{ araba.keywords }}" type="text" class="form-control round-input">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Description</label>
                        <div class="col-sm-6">
                            <input id="araba_Description" name="araba[Description]" value="{{  araba.description}}" class="form-control" id="focusedInput" type="text" value="This is focused...">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Status</label>
                        <div class="col-sm-6">
                            <select id="araba_status" name="araba[status]"  type="text" class="form-control">
                                <option >{{ araba.status}} </option>
                                <option >True </option>
                                <option >False </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <button  type="submit" class="btn btn-info">Submit</button>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>